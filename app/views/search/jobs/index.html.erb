<center>
<%= form_with url: search_jobs_show_path, namespace: :search, method: :post, local: true do |f| %>
  <% @jobs.each do |job| %>
    <% f.label :id %>
    <%= f.hidden_field :id, :value => "#{job.id}" %>

    <% f.label :title %>
    <%= f.hidden_field :title, :value => "#{job.title}" %>

    <% f.label :company %>
    <%= f.hidden_field :company, :value => "#{job.company}" %>

    <% f.label :city %>
    <%= f.hidden_field :city, :value => "#{job.city}" %>

    <% f.label :state %>
    <%= f.hidden_field :state, :value => "#{job.state}" %>

    <% f.label :salary %>
    <%= f.hidden_field :salary, :value => "#{job.salary}" %>

    <% f.label :contact %>
    <%= f.hidden_field :contact, :value => "#{job.contact}" %>


    <%= job.title %>
    <%= job.company %>
    $<%= job.salary %>

    <%= f.submit "See Details" %>
  <% end %>
<% end %>
</center>
